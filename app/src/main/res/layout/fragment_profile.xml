<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@android:color/transparent"
    tools:context=".Fragments.ProfileFragment">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/profile_pic_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            tools:src="@drawable/profile_pic" />
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:background="@color/colorBlack"
            android:visibility="visible"/>
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:alpha="1.0"
            android:background="@drawable/status_bar_fade"/>
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:alpha="1.0"
            android:layout_gravity="bottom"
            android:rotation="180"
            android:background="@drawable/status_bar_fade"/>

        <com.shubhamkislay.jetpacklogin.CustomImageView
            android:id="@+id/center_dp"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/name"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_pic"
            android:layout_marginBottom="16dp" />

        <ProgressBar
            android:id="@+id/upload_progress"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_above="@id/center_dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-118dp"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            tools:text="name"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:layout_below="@id/name"
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            tools:text="username"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/feeling_icon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_below="@id/logout_btn"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:background="@drawable/emoticon_feeling_happy"/>

        <TextView
            android:id="@+id/feeling_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/feeling_icon"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="64dp"
            android:gravity="center"
            android:text="Happy"
            android:textColor="#fff"
            android:textSize="12sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/bio_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/username"
            android:layout_marginTop="8dp"
            android:padding="16dp"
            android:gravity="center"
            android:autoLink="web"
            android:textColor="#fff"
            android:hint="Tell something about yourself"
            android:textSize="15sp"
            android:textStyle="bold|italic"
            android:visibility="visible"/>
        <RelativeLayout
            android:id="@+id/edit_text_back"
            android:background="@drawable/bio_edittext_background"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/username"
            android:layout_margin="16dp"
            android:layout_marginTop="8dp"
            android:alpha="0.35"
            android:visibility="gone"/>

        <EditText

            android:id="@+id/change_nio_edittext"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/username"
            android:layout_margin="16dp"
            android:layout_marginTop="8dp"
            android:textColor="#fff"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:hint="What's on your mind?"
            android:imeOptions="actionDone"
            android:textSize="18sp"
            android:inputType="textMultiLine"
            android:maxLength="120"
            android:padding="16dp"
            android:textColorHint="#474747"
            android:textStyle="bold|italic"
            android:visibility="gone"/>
        <Button
            android:id="@+id/logout_btn"
            android:text="Log out"
            android:paddingLeft="12dp"
            android:layout_alignParentTop="true"
            android:paddingRight="12dp"
            android:background="@drawable/message_receive_background"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"

            android:layout_marginTop="12dp"


            android:visibility="gone"/>

        <Button
            android:id="@+id/change_activity"
            android:layout_above="@id/name"
            android:layout_centerVertical="true"
            android:layout_marginLeft="-22.5dp"
            android:layout_marginTop="16dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:padding="8dp"
            android:layout_marginBottom="4dp"
            android:layout_toRightOf="@id/center_dp"
            android:background="@drawable/layer_edit_profile"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="" />


    </RelativeLayout>



</FrameLayout>