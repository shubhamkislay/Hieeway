<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@android:color/transparent"
    tools:context=".Fragments.ProfileFragment">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/profile_pic_background"
            android:scaleType="centerCrop"
            tools:src="@drawable/profile_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:alpha="1.0"
            android:background="@drawable/status_bar_fade"/>
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:alpha="1.0"
            android:layout_gravity="bottom"
            android:rotation="180"
            android:background="@drawable/status_bar_fade"/>


        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="email"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_below="@id/email"
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="username"
            android:layout_centerHorizontal="true"
            />
        <Button
            android:id="@+id/logout_btn"
            android:text="Log out"
            android:layout_marginTop="8dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:background="@drawable/message_receive_background"
            android:layout_width="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"


            android:layout_alignParentBottom="true"/>

        <Button
            android:id="@+id/change_activity"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_margin="16dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:padding="8dp"
            android:background="@drawable/layer_edit_profile"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="" />


    </RelativeLayout>



</FrameLayout>