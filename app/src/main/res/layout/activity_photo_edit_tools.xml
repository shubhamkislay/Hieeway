<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/activity_view_layout"
    android:layout_width="match_parent"
    android:background="#000"

    android:layout_height="match_parent">


    <include layout="@layout/content_main"/>

    <RelativeLayout

        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">


        <RelativeLayout
            android:id="@+id/action_send_pic_layout"
            android:layout_centerVertical="true"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/send_button_drawable"
            android:layout_marginRight="12dp">

            <Button
                android:id="@+id/action_send_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="1.0"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:textColor="#000"
                android:background="@android:color/transparent"
                android:text="Send"
                android:textAllCaps="false"
                />



        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/action_camera_layout"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/action_send_pic_layout"
            android:layout_marginRight="12dp">

        <Button
            android:clickable="false"
            android:layout_width="40dp"
            android:layout_centerHorizontal="true"
            android:layout_height="40dp"
            android:alpha="0.6"
            android:layout_centerVertical="true"
            android:shadowColor="#000"
            android:background="@drawable/button_selector"/>

        <Button
            android:id="@+id/action_camera"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#fff"
            android:background="@drawable/ic_photo_camera_black_24dp"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/action_open_layout"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/action_camera_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp">

            <Button
                android:clickable="false"
                android:layout_width="40dp"
                android:layout_centerHorizontal="true"
                android:layout_height="40dp"
                android:alpha="0.6"
                android:layout_centerVertical="true"
                android:background="@drawable/button_selector"/>

            <Button
                android:id="@+id/action_open"
                android:layout_width="25dp"
                android:layout_centerHorizontal="true"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:backgroundTint="#fff"
                android:background="@drawable/ic_photo_library_white_24dp"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/action_save_layout"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/action_open_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp">

            <Button
                android:clickable="false"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:alpha="0.6"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/button_selector"/>

        <Button
            android:id="@+id/action_save"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#fff"
            android:background="@drawable/ic_file_download_black_24dp"/>




        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/action_cancel_photo_layout"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_cancel_white_24dp"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp">

            <Button
                android:id="@+id/action_cancel_photo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:alpha="1.0"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"/>

        </RelativeLayout>

    </RelativeLayout>





</RelativeLayout>