<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="@drawable/dialog_button_back"
    android:backgroundTint="#161616">



    <RelativeLayout
        android:id="@+id/options_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:id="@+id/options_txt"
            android:layout_width="wrap_content"
            android:padding="16dp"

            android:layout_centerHorizontal="true"

            android:visibility="visible"
            android:layout_height="wrap_content"
            android:text="Reveal Options"
            android:textAllCaps="true"

            android:textColor="#fff"
            android:fontFamily="sans-serif-black"
            android:textSize="18sp"
            android:gravity="center"

            />

        <TextView
            android:layout_marginRight="-8dp"
            android:layout_toLeftOf="@id/options_txt"
            android:layout_centerVertical="true"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:backgroundTint="#fff"
            android:background="@drawable/ic_book_24dp"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_margin="4dp"
        android:id="@+id/request_to_reveal_layout"
        android:layout_below="@id/options_tag"
        android:layout_width="match_parent"
        android:padding="16dp"
        android:visibility="gone"

        android:background="@drawable/dialog_button_back"
        android:backgroundTint="#242424"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/request_to_reveal"
            android:layout_width="match_parent"
            android:textColor="#fff"
            android:textAllCaps="true"
            android:layout_height="wrap_content"
            android:text="REQUEST TO REVEAL THIS MESSAGE"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:textSize="12sp"
            android:gravity="center"

            />
        <TextView
            android:layout_below="@id/request_to_reveal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:textSize="10sp"
            android:textColor="#fff"
            android:layout_marginTop="4dp"
            android:text="A request will be sent to the person, to reveal this message."
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_margin="4dp"
        android:id="@+id/searching_layout"
        android:layout_below="@id/options_tag"
        android:layout_width="match_parent"
        android:padding="16dp"
        android:visibility="visible"


        android:background="@drawable/dialog_button_back"
        android:backgroundTint="#242424"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/searching"
            android:layout_width="match_parent"
            android:textColor="#fff"
            android:textAllCaps="true"
            android:layout_height="wrap_content"
            android:text="Search for the message"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:textSize="12sp"
            android:gravity="center"

            />
        <ProgressBar
            android:id="@+id/search_progress"
            android:layout_below="@id/searching"
            android:gravity="center"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_width="30dp"
            android:textSize="10sp"
            android:textColor="#fff"
            android:layout_marginTop="4dp"
            android:text="A request will be sent to the person, to reveal this message."
            android:layout_height="30dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_margin="4dp"
        android:id="@+id/reveal_message_layout"
        android:visibility="gone"
        android:layout_below="@id/request_to_reveal_layout"
        android:layout_width="match_parent"
        android:padding="16dp"
        android:background="@drawable/dialog_button_back"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/reveal_message"
            android:layout_width="match_parent"
            android:textColor="#fff"
            android:textAllCaps="true"
            android:layout_height="wrap_content"
            android:text="REVEAL THIS MESSAGE"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:textSize="12sp"
            android:gravity="center"

            />
        <TextView

            android:id="@+id/reveal_message_description"
            android:layout_below="@id/reveal_message"
            android:gravity="center"
            android:layout_width="match_parent"
            android:textSize="10sp"
            android:textColor="#fff"
            android:layout_marginTop="4dp"
            android:text="Reveals the messages linked to this message for both the users"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_margin="4dp"
        android:id="@+id/no_reveal_layout"
        android:layout_below="@id/options_tag"
        android:layout_width="match_parent"
        android:padding="16dp"
        android:visibility="gone"

        android:background="@drawable/dialog_button_back"
        android:backgroundTint="#000"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/no_reveal"
            android:layout_width="match_parent"
            android:textColor="#fff"
            android:textAllCaps="true"
            android:layout_height="wrap_content"
            android:text="No linked messages to reveal"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:textSize="12sp"
            android:layout_centerVertical="true"
            android:gravity="center"

            />


    </RelativeLayout>





</RelativeLayout>