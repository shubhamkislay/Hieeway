<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="2dp"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"

    tools:context=".Fragments.PeopleFragment">





    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/search_people"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:textColor="@color/textThemeColor"
            android:layout_alignParentTop="true"
            android:textSize="17dp"
            android:text=""
            android:hint="search by username"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"
            android:background="@drawable/home_background_oval"
            android:backgroundTint="@color/darkButtonBackground"
            android:imeOptions="actionDone"
            android:inputType="textMultiLine"
            android:maxLength="30"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:paddingRight="16dp"
            android:textColorHint="#555555"
            android:paddingBottom="8dp"/>



        <TextView
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textStyle="bold"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/peoplerecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:layout_marginTop="2dp"
            android:layout_below="@id/search_people"
            tools:listitem="@layout/people_contacts"/>
    </RelativeLayout>

    <RelativeLayout
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:visibility="gone"
            android:id="@+id/progress"
            style="@style/SpinKitView.Large.Wave"
            android:indeterminateTint="#fff"
            android:padding="16dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"/>

        <ProgressBar
            android:visibility="gone"
            android:id="@+id/progressTwo"
            android:indeterminateTint="#fff"
            android:padding="16dp"
            android:rotation="180"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/progress_menu_logo"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:alpha="1.0"

            android:background="@drawable/ic_search_black_24dp"
            android:backgroundTint="#8D8D8D"
            android:layout_centerInParent="true"/>


        <TextView
            android:layout_marginTop="-8dp"
            android:layout_below="@id/progress_menu_logo"
            android:visibility="visible"
            android:id="@+id/result_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"

            android:textSize="18sp"
            android:text="People"/>


    </RelativeLayout>



</FrameLayout>