<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".Fragments.ChatsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/refresh"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#000"
                android:text="Refresh List"
                android:textColor="#fff"
                android:visibility="gone" />


            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="top"
                android:layout_marginTop="-4dp"
                android:layout_above="@id/bottom_panel"
                android:alpha="1.0"
                android:background="#121212"
                android:visibility="visible" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="1.0"
                android:background="@color/darkTheme"
                android:visibility="gone" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:layout_marginBottom="24dp"
                android:background="@drawable/shotsfragmentshotscontainer"
                android:backgroundTint="@color/darkButtonBackground_accent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <TextView
                    android:id="@+id/shots_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:gravity="left"
                    android:text="Shots"
                    android:textSize="20sp" />

                <androidx.recyclerview.widget.RecyclerView


                    android:id="@+id/feeds_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/shots_title"
                    android:layout_marginTop="8dp"

                    android:fitsSystemWindows="true"
                    android:foregroundGravity="center"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    tools:listitem="@layout/edge_to_edge" />


            </RelativeLayout>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="bottom"
                android:alpha="1.0"
                android:background="@drawable/status_bar_fade"
                android:backgroundTint="@color/colorBlack"
                android:rotation="180"
                android:visibility="visible" />


            <TextView
                android:id="@+id/no_items_text"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:fontFamily="sans-serif"

                android:foregroundGravity="center"
                android:gravity="center"
                android:text="You don't have any chats. Search for people to chat in the search tab."
                android:textColor="#fff"
                android:visibility="gone" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text='email'
                android:visibility="gone" />


            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_scrollFlags="scroll|enterAlways">


                    <RelativeLayout
                        android:id="@+id/app_title_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:elevation="30dp"
                        android:outlineProvider="paddedBounds"
                        android:padding="4dp"

                        android:visibility="visible"
                        app:layout_collapseMode="parallax">

                        <ImageButton
                            android:id="@+id/chats"
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:layout_alignParentRight="true"
                            android:layout_margin="12dp"
                            android:background="@drawable/nav_btn_back_drawable"
                            android:padding="12dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/nav_hieeway_send_btn" />


                        <RelativeLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_below="@id/feed_title"
                            android:layout_marginTop="12dp"

                            android:padding="4dp">

                            <TextView
                                android:id="@+id/groups_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="4dp"
                                android:gravity="left"
                                android:text="Groups"
                                android:textSize="20sp" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/groups_recyclerview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/groups_title"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                android:orientation="horizontal" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/feed_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"

                            android:layout_marginTop="12dp"
                            android:layout_marginRight="12dp"
                            android:gravity="left"
                            android:textColor="#fff"
                            android:text="Hieeway"
                            android:textSize="24sp" />


                    </RelativeLayout>


                </com.google.android.material.appbar.CollapsingToolbarLayout>


            </com.google.android.material.appbar.AppBarLayout>


        </androidx.coordinatorlayout.widget.CoordinatorLayout>


    </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>