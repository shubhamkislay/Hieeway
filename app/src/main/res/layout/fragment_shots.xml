<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context=".Fragments.ChatsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">






        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_below="@id/feed_title_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_theme">

            <Button
                android:id="@+id/refresh"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#000"
                android:text="Refresh List"
                android:textColor="#fff"
                android:visibility="gone" />


            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="top"
                android:layout_marginTop="-4dp"
                android:layout_above="@id/bottom_panel"
                android:alpha="1.0"
                android:background="@color/background_theme"
                android:visibility="visible" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="1.0"
                android:background="@color/darkTheme"
                android:visibility="gone" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:background="@drawable/shotsfragmentshotscontainer"
                android:backgroundTint="@color/colorBlack"
                app:elevation="10dp"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <TextView
                    android:id="@+id/shots_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:textColor="#fff"
                    android:gravity="left"
                    android:text="Shots"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/new_shot_btn"
                    android:layout_margin="18dp"
                    android:background="@drawable/message_box_drawable"
                    android:text="Add"
                    android:visibility="gone"
                    android:paddingLeft="8dp"
                    android:textSize="12sp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingRight="8dp"
                    android:textColor="#000"
                    android:backgroundTint="#fff"
                    android:layout_toRightOf="@id/shots_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <androidx.recyclerview.widget.RecyclerView


                    android:id="@+id/feeds_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/shots_title"
                    android:layout_marginTop="8dp"

                    android:fitsSystemWindows="true"
                    android:foregroundGravity="center"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    tools:listitem="@layout/edge_to_edge" />

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_below="@id/shots_title"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="8dp"
                    android:alpha="1.0"
                    android:background="@drawable/status_bar_fade"
                    android:backgroundTint="@color/colorBlack"
                    android:visibility="invisible" />


            </RelativeLayout>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_gravity="bottom"
                android:alpha="1.0"
                android:background="@drawable/status_bar_fade"
                android:rotation="180"
                android:visibility="visible" />


            <TextView
                android:id="@+id/no_items_text"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:fontFamily="sans-serif"

                android:foregroundGravity="center"
                android:gravity="center"
                android:text="You don't have any chats. Search for people to chat in the search tab."
                android:textColor="#fff"
                android:visibility="gone" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text='email'
                android:visibility="gone" />


            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:elevation="0dp"
                android:background="@android:color/transparent">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    app:elevation="0dp"
                    app:layout_scrollFlags="scroll|enterAlways">


                    <RelativeLayout
                        android:id="@+id/app_title_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:outlineProvider="paddedBounds"

                        android:padding="0dp"
                        android:visibility="visible"
                        app:layout_collapseMode="pin">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-24dp"
                            android:layout_marginLeft="-2.5dp"
                            android:layout_marginRight="-2.5dp"
                            android:background="@drawable/rounded_bottom_corner_stroke_drawable"
                            android:backgroundTint="@color/colorBlack"
                            android:padding="0dp">

                            <Button
                                android:id="@+id/see_all_btn"
                                android:layout_width="64dp"
                                android:layout_height="76dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:background="@color/colorBlack"
                                android:padding="8dp"
                                android:text="See All"
                                android:textSize="12dp"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/groups_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="4dp"
                                android:gravity="left"
                                android:text="Groups"
                                android:textColor="#333333"
                                android:textSize="16sp"
                                android:visibility="gone" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/groups_recyclerview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="40dp"
                                android:layout_marginRight="8dp"
                                android:layout_marginBottom="20dp"
                                android:layout_toStartOf="@id/see_all_btn"

                                android:orientation="horizontal"
                                android:visibility="visible" />

                        </RelativeLayout>


                    </RelativeLayout>


                </com.google.android.material.appbar.CollapsingToolbarLayout>


            </com.google.android.material.appbar.AppBarLayout>


        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <RelativeLayout
            android:id="@+id/feed_title_layout"
            android:backgroundTint="@color/darkButtonBackground"
            android:background="@drawable/rounded_bottom_corner_drawable"

            android:layout_width="match_parent"
            android:layout_height="70dp">

            <ImageButton
                android:id="@+id/chats"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_alignParentRight="true"
                android:layout_margin="12dp"
                android:layout_centerVertical="true"
                android:background="@drawable/nav_btn_back_drawable"
                android:backgroundTint="@color/darkbackground"
                android:elevation="10dp"
                android:padding="12dp"
                android:scaleType="centerInside"
                android:src="@drawable/nav_hieeway_send_btn"
                app:elevation="10dp" />

            <ImageButton
                android:id="@+id/feelings"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_alignParentLeft="true"
                android:layout_margin="12dp"
                android:background="@drawable/nav_btn_back_drawable"
                android:backgroundTint="@color/darkbackground"
                android:elevation="10dp"
                android:visibility="gone"
                android:padding="6dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_emoticon_feeling_happy"
                app:elevation="10dp" />


            <TextView
                android:id="@+id/feed_title"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@id/emoji_holder_layout"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:padding="12dp"
                android:text="Hieeway"
                android:textColor="#fff"
                android:textSize="28sp" />


            <RelativeLayout
                android:id="@+id/emoji_holder_layout"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_centerVertical="true"
                android:background="@drawable/nav_btn_back_drawable"
                android:backgroundTint="@color/darkbackground"
                android:visibility="visible">


                <TextView
                    android:id="@+id/feeling_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="6dp"
                    android:background="@drawable/ic_emoticon_feeling_happy"
                    android:backgroundTint="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/emoji_icon"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="1.5dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:visibility="visible" />


            </RelativeLayout>

        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>