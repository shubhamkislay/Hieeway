<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".RegisterActivity">


    <EditText
        android:id="@+id/usernamergtr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:hint="username"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/emailrgtr"
        app:layout_constraintTop_toBottomOf="@+id/emailrgtr" />


    <EditText
        android:id="@+id/emailrgtr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="129dp"
        android:ems="10"
        android:hint="email"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/passwordrgtr"
        app:layout_constraintStart_toStartOf="@+id/passwordrgtr"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/passwordrgtr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="79dp"
        android:layout_marginTop="59dp"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usernamergtr" />

    <Button
        android:id="@+id/registerrgtr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="28dp"
        android:text="create account"
        app:layout_constraintEnd_toEndOf="@+id/passwordrgtr"
        app:layout_constraintTop_toBottomOf="@+id/passwordrgtr" />

</android.support.constraint.ConstraintLayout>