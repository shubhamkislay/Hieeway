<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app_context_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/backgroundColorTheme"

    tools:context=".EphemeralChainMessageActivity">


    <com.jgabrielfreitas.core.BlurImageView
        android:id="@+id/profile_pic"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha="1.0"
        android:transitionName="imageTransition"
        android:background="@color/backgroundColorTheme"
        >



    </com.jgabrielfreitas.core.BlurImageView>

    <ImageView
        android:id="@+id/read_message_back"
        android:alpha="0.0"
        android:visibility="gone"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-100dp"
        android:layout_marginBottom="-100dp"
        android:layout_marginLeft="-100dp"
        android:layout_marginStart="-100dp"
        android:layout_marginEnd="-100dp"
        android:layout_marginRight="-100dp"
        android:background="@drawable/hieeway_background_blurred"
        android:backgroundTint="#2E2E2E"/>


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="1.0"

        android:layout_above="@id/bottom_panel"
        android:background="@drawable/bottom_fade_dark_background"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:alpha="1.0"

        android:layout_height="300dp"
        android:background="@drawable/top_fade_dark_background"/>

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_marginTop="0dp"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">


        <Button
            android:id="@+id/back_button"
            android:layout_width="50dp"
            android:layout_centerVertical="true"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:background="@drawable/ic_keyboard_arrow_left_white_24dp"/>


        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:transitionName="nameTransitionCancel"
            android:layout_toRightOf="@id/back_button"
            android:fontFamily="sans-serif-thin"
            android:textColor="@color/textThemeColor"
            android:textSize="24dp"
            tools:text="username" />

        <Button
            android:id="@+id/photo_btn_bg"
            android:layout_width="28dp"
            android:layout_centerVertical="true"
            android:layout_height="28dp"
            android:layout_toLeftOf="@id/archive"
            android:layout_marginEnd="16dp"
            android:background="@drawable/ic_live_message_black_24dp"/>


        <Button
            android:id="@+id/archive"
            android:layout_width="30dp"
            android:rotation="180"
            android:layout_centerVertical="true"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:background="@drawable/ic_archive_white_24dp"/>
        <com.github.ybq.android.spinkit.SpinKitView
            style="@style/SpinKitView.Small.FadingCircle"
            android:id="@+id/send_pending"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginEnd="4dp"
            android:padding="2dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            app:SpinKit_Color="@color/gradientStart"
            android:visibility="gone"/>

        <Button
            android:id="@+id/archive_notification"
            android:layout_width="10dp"
            android:visibility="gone"
            android:layout_centerVertical="false"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="18dp"
            android:background="@drawable/archive_notification_dot"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_bar"
        android:fitsSystemWindows="true"
        android:layout_above="@id/message_counter_layout">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/reply_tag"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@color/offbackgroundtheme"
                android:visibility="gone">




                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="1.0"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_centerVertical="true"
                    android:visibility="visible"
                    android:breakStrategy="simple"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="14dp"
                    android:autoSizeMinTextSize="7dp"
                    android:autoSizeStepGranularity="1dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/textThemeColor"
                    tools:ignore="UnusedAttribute"
                    android:text="You are replying to the last message that you read" />

                <Button
                    android:id="@+id/cancel_message_reply_btn"
                    android:layout_width="24dp"
                    android:background="@drawable/ic_cancel_white_24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"/>


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/sender_reply_tag"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="@color/offbackgroundtheme"
                android:visibility="gone">




                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="1.0"
                    android:paddingLeft="16dp"
                    android:gravity="center"
                    android:paddingRight="16dp"
                    android:layout_centerVertical="true"
                    android:visibility="visible"
                    android:breakStrategy="simple"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="14dp"
                    android:autoSizeMinTextSize="7dp"
                    android:autoSizeStepGranularity="1dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/textThemeColor"
                    tools:ignore="UnusedAttribute"
                    android:text="You have got a reply for the message you sent earlier" />



            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/sender_reply_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"

                android:background="@drawable/layer_message_box_drawable"
                android:visibility="gone">

                <TextView
                    android:id="@+id/you_name_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end
"
                    android:textSize="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"

                    android:text="You"/>




                <TextView
                    android:id="@+id/your_sent_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="1.0"
                    android:layout_marginTop="8dp"
                    android:paddingLeft="16dp"
                    android:layout_below="@id/you_name_tag"
                    android:paddingRight="16dp"
                    android:gravity="right"
                    android:layout_marginBottom="8dp"
                    android:visibility="visible"
                    android:breakStrategy="simple"
                    android:textSize="14dp"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/textThemeColor"
                    tools:ignore="UnusedAttribute"
                    android:text="You are replying to the last message that you read" />



                <RelativeLayout
                    android:id="@+id/read_message_reply_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/show_reply_box_drawable"
                    android:layout_marginTop="12dp"
                    android:padding="5dp"
                    android:visibility="gone"
                    android:layout_below="@id/your_sent_msg">

                    <Button
                        android:id="@+id/read_message_reply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:text="Show reply"
                        android:textSize="16dp"

                        android:layout_centerHorizontal="true"

                        android:background="@color/offbackgroundtheme"
                        />


                    <com.github.ybq.android.spinkit.SpinKitView

                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        style="@style/SpinKitView.Small.Wave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:padding="2dp"
                        android:layout_toRightOf="@id/read_message_reply"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="16dp"
                        app:SpinKit_Color="@color/gradientStart"
                        android:visibility="visible"/>



                </RelativeLayout>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/message_space"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center">




                <Button
                    android:id="@+id/message_bar"
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="-2dp"
                    android:background="@drawable/message_identifier_no_message" />

                <LinearLayout

                    android:layout_toEndOf="@id/message_bar"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true"
                    android:layout_height="match_parent">

                    <TextView


                        android:id="@+id/message_text_sender_dummy"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:alpha="0.0"
                        android:autoSizeMinTextSize="1dp"
                        android:autoSizeStepGranularity="1sp"
                        android:breakStrategy="simple"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:visibility="visible"
                        android:textStyle="bold"
                        android:hyphenationFrequency="full"
                        android:textColor="@color/textThemeColor"
                        app:autoSizeMaxTextSize="@dimen/message_text_size"
                        app:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="@dimen/message_text_size"
                        android:autoSizeTextType="uniform"
                        tools:ignore="UnusedAttribute"
                        tools:text=". . ."
                        />

                        <TextView


                        android:id="@+id/message_text_sender"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:alpha="0.0"
                        android:autoSizeMinTextSize="1dp"
                        android:autoSizeStepGranularity="1sp"
                        android:breakStrategy="simple"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:textColorHint="@color/offbackgroundtheme"

                        android:textStyle="bold"
                        android:hyphenationFrequency="full"
                        android:textColor="@color/textThemeColor"
                        app:autoSizeMaxTextSize="@dimen/message_text_size"
                        app:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="@dimen/message_text_size"
                        android:autoSizeTextType="uniform"
                        tools:ignore="UnusedAttribute"
                        tools:text="Hi"
                        />

                    <TextView

                        android:id="@+id/message_text_two_sender"
                        android:layout_width="match_parent"

                        android:layout_height="0dp"
                        android:layout_weight="4"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:visibility="gone"
                        android:alpha="0.0"
                        android:autoSizeMinTextSize="1dp"
                        android:autoSizeStepGranularity="1sp"
                        android:breakStrategy="simple"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:hint="Type..."
                        android:textColorHint="@color/offbackgroundtheme"
                        android:textStyle="bold"
                        android:hyphenationFrequency="full"
                        android:textColor="@color/textThemeColor"
                        app:autoSizeMaxTextSize="@dimen/message_text_size"
                        app:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="@dimen/message_text_size"
                        android:autoSizeTextType="uniform"
                        tools:ignore="UnusedAttribute"
                        tools:text="Hi"
                        />
                    <TextView

                        android:id="@+id/message_text_three_sender"
                        android:layout_width="match_parent"

                        android:layout_height="0dp"
                        android:layout_weight="12"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:visibility="gone"
                        android:alpha="0.0"
                        android:autoSizeMinTextSize="1dp"
                        android:autoSizeStepGranularity="1sp"
                        android:breakStrategy="simple"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:hint="Type..."
                        android:textColorHint="@color/offbackgroundtheme"
                        android:textStyle="bold"
                        android:hyphenationFrequency="full"
                        android:textColor="@color/textThemeColor"
                        app:autoSizeMaxTextSize="@dimen/message_text_size"
                        android:autoSizeMaxTextSize="@dimen/message_text_size"
                        app:autoSizeTextType="uniform"
                        android:autoSizeTextType="uniform"
                        tools:ignore="UnusedAttribute"
                        tools:text="Hi"
                        />

                </LinearLayout>

                <LinearLayout

                    android:layout_toEndOf="@id/message_bar"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true"
                    android:layout_height="match_parent">

                    <TextView


                        android:id="@+id/message_text_dummy"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:alpha="0.0"
                        android:autoSizeMinTextSize="1dp"
                        android:autoSizeStepGranularity="1sp"
                        android:breakStrategy="simple"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:hyphenationFrequency="full"
                        android:textColor="@color/textThemeColor"
                        app:autoSizeMaxTextSize="@dimen/message_text_size"
                        android:autoSizeMaxTextSize="@dimen/message_text_size"
                        android:autoSizeTextType="uniform"
                        app:autoSizeTextType="uniform"
                        tools:ignore="UnusedAttribute"
                        tools:text="Hi"

                        />

                    <TextView
                        android:animateLayoutChanges="true"
                        android:id="@+id/message_text"
                        android:layout_width="match_parent"

                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"

                        android:alpha="0.0"
                        android:fontFamily="sans-serif-black"
                        app:autoSizeMaxTextSize="@dimen/message_text_size"
                        android:autoSizeMinTextSize="1dp"
                        android:autoSizeStepGranularity="1sp"
                        android:hyphenationFrequency="full"
                        android:breakStrategy="simple"
                        android:ellipsize="end"
                        app:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="@dimen/message_text_size"
                        android:autoSizeTextType="uniform"
                        android:gravity="center"
                        android:textColor="@color/textThemeColor"
                        tools:ignore="UnusedAttribute"
                        android:textStyle="bold"
                        tools:text="Hi"
                        />


                    <TextView
                        android:animateLayoutChanges="true"
                        android:id="@+id/message_text_two"
                        android:layout_width="match_parent"

                        android:layout_height="0dp"
                        android:layout_weight="4"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:visibility="gone"
                        android:alpha="0.0"
                        android:autoSizeMinTextSize="1dp"
                        android:autoSizeStepGranularity="1sp"
                        android:breakStrategy="simple"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:hyphenationFrequency="full"
                        android:textColor="@color/textThemeColor"
                        app:autoSizeMaxTextSize="@dimen/message_text_size"
                        app:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="@dimen/message_text_size"
                        android:autoSizeTextType="uniform"
                        tools:ignore="UnusedAttribute"
                        tools:text="Hi"
                        />
                    <TextView
                        android:animateLayoutChanges="true"
                        android:id="@+id/message_text_three"
                        android:layout_width="match_parent"

                        android:layout_height="0dp"
                        android:layout_weight="12"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:visibility="gone"
                        android:alpha="0.0"
                        android:autoSizeMinTextSize="1dp"
                        android:autoSizeStepGranularity="1sp"
                        android:breakStrategy="simple"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:hyphenationFrequency="full"
                        android:textColor="@color/textThemeColor"
                        app:autoSizeMaxTextSize="@dimen/message_text_size"
                        app:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="@dimen/message_text_size"
                        android:autoSizeTextType="uniform"
                        tools:ignore="UnusedAttribute"
                        tools:text="Hi"
                        />
                </LinearLayout>

                <!---->


                <com.shubhamkislay.jetpacklogin.TypeWriter
                    android:id="@+id/message_text_type_writer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_toEndOf="@id/message_bar"
                    android:alpha="0.0"
                    android:breakStrategy="simple"
                    android:fontFamily="sans-serif-black"
                    android:hyphenationFrequency="full"
                    android:textStyle="bold"
                    android:textColor="@color/textThemeColor"
                    android:visibility="gone"
                    tools:ignore="UnusedAttribute"
                    tools:text="Hi"
                    tools:textSize="60sp" />


            </RelativeLayout>


        </LinearLayout>




    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/message_counter_layout"
        android:layout_marginTop="8dp"

        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_above="@id/bottom_panel"
        android:layout_height="120dp">

        <com.github.ybq.android.spinkit.SpinKitView

            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/message_pulse"
            style="@style/SpinKitView.Large.PulseRing"
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:layout_marginLeft="2dp"
            android:padding="2dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"

            app:SpinKit_Color="@color/gradientStart"
            android:visibility="invisible"/>


        <TextView

            android:id="@+id/message_no_message_counter_background"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:text=""
            android:textStyle="bold"
            android:textSize="24dp"
            android:textColor="@color/gradientStart"
            android:background="@drawable/message_counter_no_message_background"

            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>




        <TextView

            android:id="@+id/message_counter_background"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:gravity="center"
            android:text=""
            android:textStyle="bold"
            android:textSize="24dp"
            android:textColor="@color/gradientStart"
            android:background="@drawable/message_counter_drawable_background"

            android:visibility="invisible"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

        <Button
            android:id="@+id/reply_message_btn"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/message_counter"
            android:layout_marginRight="42dp"

            android:background="@drawable/ic_reply_white_24dp"
            android:backgroundTint="#A8A8A8"
            android:visibility="gone"
            android:layout_width="55dp"
            android:layout_height="55dp" />


        <com.github.ybq.android.spinkit.SpinKitView

            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/chain_pulse"
            style="@style/SpinKitView.Large.PulseRing"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginRight="8.5dp"
            android:padding="2dp"

            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"

            app:SpinKit_Color="@color/textThemeColor"
            android:visibility="gone"/>


        <Button
            android:id="@+id/chain_message_btn"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:rotation="90"
            android:alpha="1.0"
            android:layout_marginRight="16dp"
            android:background="@drawable/chain_message_button_drawable"
            android:visibility="gone"
            android:layout_width="50dp"
            android:layout_height="50dp" />





        <TextView
            android:id="@+id/button_exterior"
            android:layout_width="90dp"
            android:gravity="center"
            android:text=""
            android:textStyle="bold"

            android:visibility="visible"
            android:textSize="32dp"
            android:textColor="#fff"
            android:background="@drawable/button_exterior"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/message_counter"
            android:layout_width="58dp"
            android:gravity="center"
            android:text=""
            android:textStyle="bold"
            android:textSize="32dp"
            android:textColor="#fff"
            android:background="@drawable/message_counter_drawable"
            android:layout_height="58dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

        <com.ebanx.swipebtn.SwipeButton
            android:id="@+id/swipeBtn"
            android:layout_marginStart="4dp"
            android:layout_width="85dp"
            app:inner_text_size="12dp"
            android:layout_toEndOf="@id/button_exterior"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            app:inner_text_top_padding="18dp"
            app:inner_text=" "
            android:visibility="gone"
            app:inner_text_color="#fff"
            android:rotation="90"
            app:inner_text_bottom_padding="18dp"
            app:button_image_disabled="@drawable/ic_fast_forward_white_24dp"

            app:button_image_enabled="@drawable/ic_stop_black_24dp"

            app:button_bottom_padding="12dp"
            app:button_left_padding="12dp"
            app:button_right_padding="12dp"
            app:button_top_padding="12dp"
            app:inner_text_background="@drawable/message_swipe_bg"
            app:button_background="@drawable/message_swipe_active_bg"

            />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/bottom_panel"
        android:animateLayoutChanges="false"
        android:orientation="vertical">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_bar"
        android:fitsSystemWindows="true"
        android:paddingRight="24dp"
        android:background="@color/backgroundColorTheme"
        android:layout_alignParentBottom="true">


        <Button
            android:layout_width="28dp"
            android:id="@+id/send_button"
            android:layout_height="28dp"
            android:enabled="false"
            android:alpha="0.15"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/nav_hieeway_send_btn"/>

        <br.com.instachat.emojilibrary.model.layout.EmojiEditText
            android:id="@+id/message_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="42dp"
            android:maxHeight="150dp"
            android:textColor="@color/textThemeColor"

            android:layout_marginTop="12dp"
