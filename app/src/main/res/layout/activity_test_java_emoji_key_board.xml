<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/rootview"
    android:background="#000"
    android:layout_height="match_parent"
    tools:context=".TestJavaEmojiKeyBoard">





    <TextView
        android:id="@+id/emojitextview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_panel"
        android:text="hello"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        />

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/bottom_panel"
        android:animateLayoutChanges="true"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >


        <RelativeLayout

            android:layout_width="wrap_content"

            android:layout_height="60dp">

            <ImageView

                android:layout_alignParentLeft="true"
                android:id="@+id/emoji_toggle_btn"
                android:layout_width="40dp"
                android:text="E"
                android:layout_centerVertical="true"
                android:padding="4dp"
                android:background="#fff"
                android:src="@drawable/ic_insert_emoticon_white_24dp"
                android:layout_height="40dp" />
            <Button
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:id="@+id/emoji_send_btn"
                android:text="S"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <br.com.instachat.emojilibrary.model.layout.EmojiEditText
                android:layout_width="match_parent"
                android:id="@+id/emojiEdittext"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/emoji_toggle_btn"
                android:layout_toLeftOf="@id/emoji_send_btn"
                android:inputType="text"
                android:background="@drawable/message_box_drawable"
                android:backgroundTint="#131313"
                android:textColorHint="#383838"
                android:focusedByDefault="true"
                android:hint="type your message..."
                android:paddingStart="24dp"
                android:layout_margin="2dp"  />



        </RelativeLayout>




    <br.com.instachat.emojilibrary.model.layout.EmojiKeyboardLayout
        android:layout_width="match_parent"
        android:visibility="gone"
        android:id="@+id/emoji_keyboard_layout"
        android:layout_alignParentBottom="true"
        android:layout_height="263dip"/>
    </LinearLayout>




</RelativeLayout>