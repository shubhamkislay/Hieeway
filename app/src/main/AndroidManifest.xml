<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.hieeway.hieeway">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_NUMBERS" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <permission android:name="android.permission.MEDIA_CONTENT_CONTROL" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name="com.hieeway.hieeway.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_hieeway_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_hieeway_logo_rounded"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.hieeway.hieeway.YoutubePlayerActivity"></activity>
        <activity android:name="com.hieeway.hieeway.VideoEncryptionActivity" />
        <activity android:name="com.hieeway.hieeway.VideoPlayActivity" />
        <activity android:name="com.hieeway.hieeway.VideoUploadActivity" />
        <activity android:name="com.hieeway.hieeway.PhoneAuthenticationActivity" />
        <activity android:name="com.hieeway.hieeway.ContactsActivity" />
        <activity android:name="com.hieeway.hieeway.AudioRecorderActivity" />
        <activity android:name="com.hieeway.hieeway.PaletteActivity" />
        <activity
            android:name="com.hieeway.hieeway.ViewProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.hieeway.hieeway.ProfilePhotoActivity"
            android:excludeFromRecents="true"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar.FullScreen" />
        <activity
            android:name="com.hieeway.hieeway.VerticalRegisterationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.hieeway.hieeway.WebRTCActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.hieeway.hieeway.RevealReplyActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.hieeway.hieeway.RevealedMessageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.hieeway.hieeway.EncryptionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.hieeway.hieeway.NavButtonTest"
            android:screenOrientation="portrait" />
        <activity
            android:name=".NavButtonTestActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.hieeway.hieeway.RequestTrackerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.hieeway.hieeway.EphemeralPhotoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".EphermeralPhotoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ephemeral_photo_activity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.hieeway.hieeway.AutoTextSizeChangeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.hieeway.hieeway.VerticalPageActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.hieeway.hieeway.PhotoTreatmentActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.hieeway.hieeway.TestJavaEmojiKeyBoard"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.hieeway.hieeway.FireVideo"
            android:screenOrientation="portrait"
            android:theme="@style/BlackStatusBar"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.hieeway.hieeway.LiveMessagingActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.hieeway.hieeway.SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hieeway.hieeway.EphemeralChainMessageActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name="com.hieeway.hieeway.SwipeButtonActivity" />
        <activity
            android:name="com.hieeway.hieeway.ArchiveActivity"
            android:label="@string/title_activity_archive"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.hieeway.hieeway.EphemeralMessageActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.hieeway.hieeway.PhotoViewerUploadActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.hieeway.hieeway.ImageUpload"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.hieeway.hieeway.PhotoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.hieeway.hieeway.PhotoViewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.hieeway.hieeway.PhotoEditToolsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yalantis.ucrop.UCropActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name="com.hieeway.hieeway.CameraActivity"
            android:hardwareAccelerated="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.hieeway.hieeway.AlphaActivity"
            android:label="@string/title_activity_alpha"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.hieeway.hieeway.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.hieeway.hieeway.RegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.hieeway.hieeway.HomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.hieeway.hieeway.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <receiver android:name="com.hieeway.hieeway.NotificationReceiver" />

        <service
            android:name="com.hieeway.hieeway.MyMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name="com.hieeway.hieeway.SyncService" />
        <service android:name="com.hieeway.hieeway.SendMediaService" />

        <receiver android:name="androidx.media.session.MediaButtonReceiver">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>
    </application>

</manifest>